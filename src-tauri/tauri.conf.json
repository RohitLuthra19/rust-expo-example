{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sample-pos",
  "version": "0.1.0",
  "identifier": "com.shr.pos",
  "build": {
    "devUrl": "http://localhost:8081",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../expo-app/dist"
  },
  "app": {
    "windows": [
      {
        "title": "sample-pos",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "appimage", "msi", "nsis", "app", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
