{
  "name": "sample-pos",
  "description": "Expo web + Electron desktop app",
  "author": "Rohit Luthra",
  "email": "rohit.luthra19@gmail.com",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev:expo": "cd expo-app && npx expo start --web",
    "dev:electron": "NODE_ENV=development EXPO_DEV_PORT=8081 electron electron/main.cjs",
    "dev": "concurrently \"npm run dev:expo\" \"sleep 5 && npm run dev:electron\"",
    "prod:electron": "electron electron/main.cjs",
    "prod": "npm run build:expo && npm run prod:electron",
    "build:expo": "cd expo-app && npx expo export",
    "build:electron": "electron-builder",
    "build": "npm run build:expo && npm run build:electron"
  },
  "devDependencies": {
    "concurrently": "^6.5.1",
    "electron": "^38.0.0",
    "typescript": "~5.8.3",
    "electron-builder": "^24.6.0"
  }
}
