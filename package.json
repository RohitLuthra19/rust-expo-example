{
  "name": "sample-pos",
  "version": "1.0.0",
  "description": "Expo app bundled with Electron for desktop",
  "main": "electron/main.js",
  "author": {
    "name": "Rohit Luthra",
    "email": "rohit.luthra19@example.com"
  },
  "scripts": {
    "setup": "npm install && cd expo-app && npm install && cd ../backend && npm install",
    "dev": "npm run build:expo && electron .",
    "expo:dev": "cd expo-app && npx expo start",
    "backend:dev": "cd backend && npm run dev",
    "backend:build": "cd backend && npm run build",
    "backend:start": "cd backend && npm run start",
    "dev:fullstack": "concurrently \"npm run backend:dev\" \"npm run expo:dev\"",
    "dev:watch": "concurrently \"npm run expo:dev\" \"wait-on http://localhost:8081 && electron .\"",
    "build": "npm run build:expo && npm run build:electron",
    "build:expo": "cd expo-app && npm run build:web",
    "build:electron": "electron-builder",
    "pack": "npm run build:expo && electron-builder --dir",
    "dist": "npm run build:expo && electron-builder"
  },
  "build": {
    "appId": "com.shr.sample-pos",
    "productName": "Expo Electron App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "expo-app/web-build/**/*",
      "node_modules/**/*",
      "!expo-app/node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "express": "^4.21.2"
  },
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^24.0.0"
  }
}